<%- include("partials/header.ejs")%>
<br>
      <div class="container-fluid">
        <div class="col-md-5 mx-auto">
            <form action="/login" method="POST">
                <div class="p-4 shadow" id="posts">
                    <h3 class="text-center font-weight-bold mb-2 text-dark">Login</h3>
                    <h5>Username</h5>
                    <input type="text" class="form-control mb-3" name="username">
                    <h5>Password</h5>
                    <input type="password" class="form-control mb-4" name="password">
                    <button type="submit" class="btn btn-info btn-block mb-2" style="font-size: 18px;">
                        Login</button>
                    <center>
                        <a href="/forget" style="font-size: 12px;" class="text-decoration-none text-secondary">
                            Forgot Password</a><br>
                        <a href="/signup" style="font-size: 11px;" class=" float-left text-info">
                        Register an account</a>
                    </center>
                </div>
            </form>
          </div>
      </div>

